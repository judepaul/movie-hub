
<div class="login-form">    
    <%= form_tag '/login' do %>
        <div class="avatar"><i class="material-icons">&#xE7FF;</i></div>
    	<h4 class="modal-title">Login to Movie Hub</h4>
        <div class="form-group">
            <%= text_field_tag :username, "", {class:"form-control", placeholder:"Username", required:"required", id:"username",  maxlength: "20"} %>
        </div>
        <div class="text-right">
            <button type="button" class="btn btn-info btn-lg trigger-btn">Go</div>
    <% end %>
</div>

<!-- Modal HTML -->

<div id="LoginConfirmModal" class="modal fade login-modal">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header">
				<div class="icon-box">
					<i class="material-icons">&#xE876;</i>
				</div>				
				<h4 class="modal-title text-center">Confirm Name</h4>	
			</div>
			<div class="modal-body text-left">
				Do you want to create a new user with username: <strong><span id="display_name" /></strong>
			</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
				<button type="button" id="submit" class="btn btn-success btn-success" data-dismiss="modal">OK</button>
			</div>
		</div>
	</div>
</div>     


<!-- Max character Limit check Modal  -->
<div id="validateLength" class="modal fade login-modal">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
            <div class="modal-header">
				<div class="icon-box">
                    <i class="material-icons">&#xE5CD;</i>
                </div>
            </div>
			<div class="modal-body text-left">
				Hello there!<br/> You have reached the Max. character limit
			</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
			</div>
		</div>
	</div>
</div>     

<!-- Special character check Modal  -->
<div id="specialChar" class="modal fade login-modal">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
        <div class="modal-header">
				<div class="icon-box">
                    <i class="material-icons">&#xE5CD;</i>
                </div>
            </div>
			<div class="modal-body text-left">
				Hello there!<br/> Please use only letters, numbers and underscore.
			</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
			</div>
		</div>
	</div>
</div>     